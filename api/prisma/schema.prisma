datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  passwordHash  String
  role          Role
  createdAt     DateTime @default(now())
  tickets       Ticket[]
  replies       Reply[]
  notifications Notification[]
  orders        Order[] 
}

model Ticket {
  id          String   @id @default(uuid())
  subject     String
  message     String
  orderNumber Int
  status      TicketStatus @default(OPEN)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  replies     Reply[]
  createdAt   DateTime @default(now())
}

model Order {
  orderNumber     Int     @id
  userId          String
  user            User    @relation(fields: [userId], references: [id])
  name            String
  shippingAddress String
  billingAddress  String?
  email           String
  phone           Int?
  fulfillment     String
  tracking        String?
  items           Json
  subtotal        Float
  shippingCost    Float
  orderRisk       String?
  timeline        Json
}

model Reply {
  id        String   @id @default(uuid())
  ticketId  String
  userId    String
  message   String
  createdAt DateTime @default(now())
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  ticketId  String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
}

enum Role {
  CUSTOMER
  SUPPORT
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
}
